<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginVertical="5dp"
    android:layout_marginLeft="5dp">

    <TextView
        android:id="@+id/forecast_element_time_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Time:"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/forecast_element_time_text_view_editable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="15:00"
        app:layout_constraintTop_toTopOf="@id/forecast_element_time_text_view"
        app:layout_constraintBottom_toBottomOf="@id/forecast_element_time_text_view"
        app:layout_constraintLeft_toRightOf="@id/forecast_element_time_text_view"
        android:layout_marginLeft="10dp" />

    <TextView
        android:id="@+id/forecast_element_temperature_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Temperature:"
        app:layout_constraintTop_toBottomOf="@id/forecast_element_time_text_view"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/forecast_element_temperature_text_view_editable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10 st. c"
        app:layout_constraintTop_toTopOf="@id/forecast_element_temperature_text_view"
        app:layout_constraintBottom_toBottomOf="@id/forecast_element_temperature_text_view"
        app:layout_constraintLeft_toRightOf="@id/forecast_element_temperature_text_view"
        android:layout_marginLeft="10dp" />

    <TextView
        android:id="@+id/forecast_element_pressure_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pressure:"
        app:layout_constraintTop_toBottomOf="@id/forecast_element_temperature_text_view"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/forecast_element_pressure_text_view_editable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="980 hPa"
        app:layout_constraintTop_toTopOf="@id/forecast_element_pressure_text_view"
        app:layout_constraintBottom_toBottomOf="@id/forecast_element_pressure_text_view"
        app:layout_constraintLeft_toRightOf="@id/forecast_element_pressure_text_view"
        android:layout_marginLeft="10dp" />

    <TextView
        android:id="@+id/forecast_element_desc_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Description:"
        app:layout_constraintTop_toBottomOf="@id/forecast_element_pressure_text_view"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/forecast_element_desc_text_view_editable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="cloudy"
        app:layout_constraintTop_toTopOf="@id/forecast_element_desc_text_view"
        app:layout_constraintBottom_toBottomOf="@id/forecast_element_desc_text_view"
        app:layout_constraintLeft_toRightOf="@id/forecast_element_desc_text_view"
        android:layout_marginLeft="10dp" />


</androidx.constraintlayout.widget.ConstraintLayout>